<%= minimal_form_for(@course) do |f| %>
  <p>
  <%= f.input :name %>
  </p>
  <p>
  <%= f.input :duration %>
  </p>
  <p>
  <%= f.input :start_date, as: :date %>
  </p>
  <p>
  <%= f.input :end_date, as: :date %>
  </p>
  <p>
  <%= f.input :price %>
  </p>
  <p>
  <%= f.association :categories, as: :check_boxes %>
  </p>
  <p>
  <%= f.button :submit %>
  </p>
<% end %>