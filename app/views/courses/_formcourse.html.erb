require 'dynamic_form'

<%= form_for(@course) do |f| %>
  <p>
    <%= f.error_messages error_message_on(@course) %>
  </p>
  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :duration %>
  <%= f.text_field :duration %>
  </p>
  <p>
  <%= f.label :start_date %>
  <%= f.date_select :start_date %>
  </p>
  <p>
  <%= f.label :end_date %>
  <%= f.date_select :end_date %>
  </p>
  <p>
  <%= f.label :price %>
  <%= f.text_field :price %>
  </p>
  <p>
  <%= f.submit %>
  </p>
<% end %>